{{#if updateQuestionForm}}
<h1>Update {{question.author}}'s question'</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>

    <div class="form-group">
      <label for="content">content</label>
      {{input value=content id="content" placeholder=question.content}}
    </div>

    <div class="form-group">
      <label for="info">info</label>
      {{input value=info id="info" placeholder=question.info}}
    </div>

    <div class="form-group">
      <label for="profilePictureURL">profile Picture</label>
      {{input value=profilePictureURL id="profilePictureURL" placeholder=question.profilePictureURL}}
    </div>
    <button {{action 'update' question}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updateQuestionForm'}}>update Question</button>
{{/if}}
