<div class="index">
<h1>{{question.author}}'s question: {{question.content}}</h1>
<br>
<button {{action 'delete' question}}>Delete Question</button>
<br>
<br>
<p><img src={{question.profilePictureURL}} alt="Picture from question"></p>
<br>
<hr>
<h2> Answers: </h2>

<ul>
  {{#each sortedAnswer as |answer|}}
    {{answer-tile answer=answer}}
  {{/each}}
</ul>
</div>
